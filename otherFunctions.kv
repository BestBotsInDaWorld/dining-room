<DepositApp>
    deposit: deposit
    canvas:
        Rectangle:
            source: 'Images/backgrounds/background5.jpg'
            pos: self.pos
            size: self.size
    Label:
        TextInput:
            hint_text: "Введите сумму"
            id: deposit
            size: root.width / 2, root.height / 20
            pos: root.width / 3.8, root.height/1.5
    Label:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.1)
            RoundedRectangle:
                size: root.width / 4, root.height - root.height/1.2
                pos: root.width / 2.6, root.height/2.5
                radius: [15]
        Button:
            text: "Подтвердить"
            font_name: "RubikMonoOne-Regular"
            pos: root.width / 2.2, root.height/2.5
            size: root.width / 8, root.height / 6
            background_color: (1, 1, 1, 0)
            on_press: root.confirm_deposit()
    Button:
        size_hint_x: None
        size_hint_y: None
        font_name: "RubikMonoOne-Regular"
        text: "Обратно\n к балансу"
        font_size: 16
        background_color: (1, 1, 1, 0)
        size: root.width / 8, root.height / 6
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = "Balance"
    Button:
        size_hint_x: None
        size_hint_y: None
        font_name: "RubikMonoOne-Regular"
