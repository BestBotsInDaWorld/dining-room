#: import NoTransition kivy.uix.screenmanager.NoTransition
<AboutUsApp>
    canvas:
        Rectangle:
            source: 'Images/backgrounds/background4.jpg'
            pos: self.pos
            size: self.size
    Label:
        font_name: "RubikMonoOne-Regular"
        font_size: root.width / 12
        pos: self.width / 25, self.height / 13
        text: "Система <Столовая> автоматизирует\nвзаимодействие сотрудников с компанией\nпредоставляющей услуги\nкорпоративного питания. "
    Button:
        size_hint_x: None
        size_hint_y: None
        font_name: "RubikMonoOne-Regular"
        text: "Обратно\nв меню"
        font_size: root.width / 12
        background_color: (1, 1, 1, 0)
        size: root.width / 8, root.height / 6
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'Menu'


<OtherSystemsApp>
    canvas:
        Rectangle:
            source: 'Images/backgrounds/background4.jpg'
            pos: self.pos
            size: self.size
    Button:
        size_hint_x: None
        size_hint_y: None
        text: "Обратно в меню"
        size: root.width / 8, root.height / 6
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'Menu'