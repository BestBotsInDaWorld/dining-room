<FoodMenuApp>
    food_button: food_button
    food_image: food_image
    canvas:
        Rectangle:
            source: "Images/backgrounds/background5.jpg"
            pos: self.pos
            size: self.size

    Image:
        id: food_image
        source: "Images/backgrounds/grey_font.jpg"
        size_hint: (None, None)
        size: (root.width / 4, root.height / 4)
        pos: (root.width / 20, root.height / 1.5)
    Label:
        text: 'Выбор \nблюда'
        size_hint: (None, None)
        pos: (root.width / 15, root.height / 1.15)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 23
                pos: root.width / 3, root.height / 1.23
                radius: [15]

        id: food_button
        text: 'Выбрать блюдо'
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 3, root.height / 1.23)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 50
        on_release: 
            root.switch_image()

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.5, root.height / 1.5
                radius: [15]
        id: apply_user_del
        text: "Удалить"
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.5, root.height / 1.5)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40
        on_press:
            root.remove_user()

    Button:
        text: "Назад в меню"
        size_hint: (None, None)
        size: root.width / 5.6, root. height / 27
        pos: (root.width / 2.5, root.height / 11)
        font_name: "RubikMonoOne-Regular"
        font_size: root.width / 35


        background_color: (0, 0, 0, 1)
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'Menu'
