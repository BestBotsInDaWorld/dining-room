<FoodMenuApp>
    food_button: food_button
    food_image: food_image
    food_counter: food_counter
    canvas:
        Rectangle:
            source: "Images/backgrounds/background5.jpg"
            pos: self.pos
            size: self.size

    Image:
        id: food_image
        source: "Images/backgrounds/grey_font.jpg"
        size_hint: (None, None)
        size: (root.width / 4, root.height / 4)
        pos: (root.width / 20, root.height / 1.5)
    Label:
        text: 'Выбор \nблюда'
        size_hint: (None, None)
        pos: (root.width / 15, root.height / 1.15)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 23
                pos: root.width / 3, root.height / 1.23
                radius: [15]

        id: food_button
        text: 'Выбрать блюдо'
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 3, root.height / 1.23)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 50

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.5, root.height / 1.5
                radius: [15]
        id: apply_user_del
        text: "Добавить в заказ"
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.5, root.height / 1.5)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40
        on_press:
            root.add_to_order()
    TextInput:
        id: food_counter
        hint_text: 'Введите количество'
        size_hint: (None, None)
        size: root.width * 0.3, root.height * 0.1
        pos: root.width * 0.65, root.height * 0.8


    Button:
        size_hint_x: None
        size_hint_y: None
        font_name: "RubikMonoOne-Regular"
        text: "Обратно\nв меню"
        font_size: 16
        background_color: (1, 1, 1, 0)
        size: root.width / 8, root.height / 6
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'Menu'

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.5, root.height / 1.5
                radius: [15]
        id: apply_user_del
        text: "Добавить в заказ"
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.5, root.height / 1.5)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'Menu'

<FoodCartApp>
    amount_hint: amount_hint
    price_hint: price_hint
    food_exclude_button: food_exclude_button
    food_exclusion_image: food_exclusion_image
    canvas:
        Rectangle:
            source: "Images/backgrounds/background5.jpg"
            pos: self.pos
            size: self.size
    Button:
        canvas:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.4, root.height / 1.4
                radius: [15]
        id: food_exclude_button
        text: 'Позиция:'
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.4, root.height / 1.4)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 35
    Image:
        id: food_exclusion_image
        source: "Images/backgrounds/grey_font.jpg"
        size_hint: (None, None)
        size: (root.width / 4, root.height / 4)
        pos: (root.width * 0.74, root.height / 1.3)
    Label:
        size_hint: (None, None)
        font_size: root.width / 30
        text: "Кол-во:"
        font_name: "RubikMonoOne-Regular"
        size: (root.width / 4, root.height / 4)
        pos: (root.width * 0.5, root.height / 2)
    Label:
        size_hint: (None, None)
        font_size: root.width / 30
        text: "Цена:"
        font_name: "RubikMonoOne-Regular"
        size: (root.width / 4, root.height / 4)
        pos: (root.width * 0.5, root.height / 2.5)
    Label:
        id: amount_hint
        size_hint: (None, None)
        size: (root.width / 4, root.height / 4)
        pos: (root.width * 0.7, root.height / 2)
        text: ""
    Label:
        id: price_hint
        size_hint: (None, None)
        size: (root.width / 4, root.height / 4)
        pos: (root.width * 0.7, root.height / 2.5)
        text: ""