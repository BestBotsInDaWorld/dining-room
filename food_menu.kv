<FoodMenuApp>
    food_button: food_button
    food_image: food_image
    food_counter: food_counter
    canvas:
        Rectangle:
            source: "Images/backgrounds/background5.jpg"
            pos: self.pos
            size: self.size

    Image:
        id: food_image
        source: "Images/backgrounds/grey_font.jpg"
        size_hint: (None, None)
        size: (root.width / 4, root.height / 4)
        pos: (root.width / 20, root.height / 1.5)
    Label:
        text: 'Выбор \nблюда'
        size_hint: (None, None)
        pos: (root.width / 15, root.height / 1.15)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 23
                pos: root.width / 3, root.height / 1.23
                radius: [15]

        id: food_button
        text: 'Выбрать блюдо'
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 3, root.height / 1.23)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 50

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.5, root.height / 1.5
                radius: [15]
        id: apply_user_del
        text: "Добавить в заказ"
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.5, root.height / 1.5)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40
        on_press:
            root.add_to_order()
    TextInput:
        id: food_counter
        hint_text: 'Введите количество'
        size_hint: (None, None)
        size: root.width * 0.3, root.height * 0.1
        pos: root.width * 0.65, root.height * 0.8


    Button:
        canvas:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 6, root.height / 6
                pos: (root.width / 10, 0)
                radius: [15]
        size_hint_x: None
        size_hint_y: None
        font_name: "RubikMonoOne-Regular"
        text: "Обратно\nв меню"
        font_size: root.width / 35
        background_color: (1, 1, 1, 0)
        pos: root.width * 0.1, 0
        size: root.width / 6, root.height / 6
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'Menu'

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.5, root.height / 1.5
                radius: [15]
        id: apply_user_del
        text: "Добавить в заказ"
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.5, root.height / 1.5)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40
        on_release: root.add_to_order()

    Button:
        canvas.before:
            Color:
                rgba: (1, 1, 1, 0.2)
            RoundedRectangle:
                size: root.width / 4, root.height / 20
                pos: root.width / 1.5, root.height / 10
                radius: [15]
        text: "К корзине"
        size_hint: (None, None)
        size: root.width / 4, root.height / 20
        pos: (root.width / 1.5, root.height / 10)
        font_name: "RubikMonoOne-Regular"
        background_color: (0, 0, 0, 0)
        font_size: root.width / 40
        on_release:
            root.manager.transition = NoTransition()
            root.manager.current = 'FoodCart'


