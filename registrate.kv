#: import NoTransition kivy.uix.screenmanager.NoTransition
<RegApp>
    vital_name: vital_name
    surname: surname
    last_name: last_name
    born: born
    login: login
    password: password
    confirm_password: confirm_password
    empty_line: empty_line
    cb1: cb1
    cb2: cb2
    check_1: check_1
    check_2: check_2
    check_3: check_3
    GridLayout:
        canvas:
            Rectangle:
                source: 'Images/backgrounds/background4.jpg'
                size: self.size
                pos: self.pos
        size: root.width, root.height
        cols: 1
        GridLayout:

            cols: 2
            rows: 4

            Label:
                text: "Имя"
                font_name: "RubikMonoOne-Regular"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 5, self.height - self.height/8
                        pos: root.width / 5, self.y + 2
                        radius: [15]
                hint_text: "Введите имя"

            TextInput:
                id: vital_name
                multiline: False
                background_color: (1, 1, 1, 0.1)
            Label:
                font_name: "RubikMonoOne-Regular"
                text: "Фамилия"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 4, self.height - self.height/8
                        pos: root.width / 5.30, self.y + 2
                        radius: [15]
            TextInput:
                id: surname
                multiline: False
                background_color: (1, 1, 1, 0.1)
            Label:
                font_name: "RubikMonoOne-Regular"
                text: "Отчество"
                font_size: 16
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 3.25, self.height - self.height/8
                        pos: root.width / 5.75, self.y + 2
                        radius: [15]
            TextInput:
                id: last_name
                multiline: False
                background_color: (1, 1, 1, 0.1)
            Label:
                font_name: "RubikMonoOne-Regular"
                text: "Дата рождения"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 2.2, self.height - self.height/8
                        pos: root.width / 7.25, self.y + 2
                        radius: [15]
            TextInput:
                id: born
                multiline: False
                background_color: (1, 1, 1, 0.1)
        GridLayout:
            cols: 2
            Label:
                font_name: "RubikMonoOne-Regular"        
                id: empty_line
                text: ""
                font_size: 12
                multiline: True
            Button:
                id: submit
                font_name: "RubikMonoOne-Regular"       
                text: "Обратно к логину"
                font_size: 20
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Log'
                background_color: (.5, .5, .5, 0.1)
        GridLayout:
            cols: 5
            Label:
                font_name: "RubikMonoOne-Regular"   
                text: "Пол"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 2, self.height / 2
                        pos: root.width / 3 * 0.15, root.height / 3 * 1.33 + 5
                        radius: [15]
            CheckBox:
                group: "sex"
                id: cb1
                active: True
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 3, self.height / 2
                        pos: root.width / 3 * 0.8, root.height / 3 * 1.33 + 5
                        radius: [15]
            Label:
                font_name: "RubikMonoOne-Regular"   
                text: "Мужской"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width, self.height / 2
                        pos: root.width / 3 * 1.2, root.height / 3 * 1.33 + 5
                        radius: [15]
            CheckBox:
                group: "sex"
                id: cb2
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width / 3, self.height / 2
                        pos: root.width / 3 * 2, root.height / 3 * 1.33
                        radius: [15]
            Label:
                font_name: "RubikMonoOne-Regular"   
                text: "Женский"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width, self.height / 2
                        pos: root.width / 3 * 2.4, root.height / 3 * 1.33 + 5
                        radius: [15]
        GridLayout:
            size: root.width, root.height
            cols: 3

            Label:
                font_name: "RubikMonoOne-Regular"               
                text: "Логин"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width - self.width/2, self.height / 1.5
                        pos: root.width / 12, root.height / 3 * 1.05 - 3
                        radius: [15]
            TextInput:
                id: login
                multiline: False
                background_color: (1, 1, 1, 0.1)
            Label:
                font_name: "RubikMonoOne-Regular"               
                id: check_1
                multiline: True
            Label:
                font_name: "RubikMonoOne-Regular"               
                text: "Пароль"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width - self.width/3, self.height / 1.5
                        pos: root.width / 18, root.height / 3 * 0.85 - 3
                        radius: [15]
            TextInput:
                id: password
                password: True
                multiline: False
                background_color: (1, 1, 1, 0.1)
            Label:
                font_name: "RubikMonoOne-Regular"                   
                id: check_2
                font_size: 12
                text: ""
                multiline: True
            Label:
                font_name: "RubikMonoOne-Regular"              
                text: "Повторите пароль"
                canvas.before:
                    Color:
                        rgba: (.5, .5, .5, 0.1)
                    RoundedRectangle:
                        size: self.width - self.width/8, self.height / 1.5
                        pos: root.width / 55, root.height / 3 * 0.65 - 3
                        radius: [15]
            TextInput:
                id: confirm_password

                password: True
                multiline: False
                background_color: (1, 1, 1, 0.1)
            Label:
                id: check_3
                font_name: "RubikMonoOne-Regular" 
                text: ""
                multiline: True

        Button:
            id: submit
            font_name: "RubikMonoOne-Regular"       
            text: "Регистрация"
            font_size: 40
            on_press: 
                root.manager.transition = NoTransition()
                if root.btn_click(): root.manager.current = 'Log'
            background_color: (.5, .5, .5, 0.2)
<LogApp>
    username_input: username_input
    password_input: password_input
    worst_login: worst_login
    canvas:
        Rectangle:
            source: 'Images/backgrounds/background4.jpg'
            pos: self.pos
            size: self.size
    GridLayout:
        row_force_default: True
        col_force_default: True  
        rows: 7
        row_default_height: root.height / 6
        col_default_width: root.width / 2
        pos: root.width/4, -root.height/8
        Label:
            text: 'Вход'
            font_name: "RubikMonoOne-Regular"
            size: 400, 400
            font_size: 100
        GridLayout:
            rows: 2
            Label:
                id: worst_login
                font_size: 25
                font_name: "Finlandica-Regular"
                text: ""
            Label:
                text: ""
        GridLayout:
            rows: 3
            padding: 10
            TextInput:
                id: username_input
                background_color: (1, 1, 1, 0.35)
                hint_text: 'Имя пользователя'
            Label:
                size: (1, .2)
                text: ""
            TextInput:
                id: password_input
                hint_text: 'Пароль'
                background_color: (1, 1, 1, 0.35)
                password: True  # Скрыть ввод пароля

        Label:
            text: ""
        GridLayout:
            rows: 2
            GridLayout:
                size: 100, 100
                rows: 2
                Button:
                    font_name: "RubikMonoOne-Regular"
                    text: 'Войти'
                    on_release: root.entering()
                    font_size: 20
                    background_color: (1, 1, 1, 0.2)

            Button:
                font_name: 'Finlandica-Regular'
                text: 'Не зарегистрированы? Сделайте это сейчас!'
                font_size: 16
                background_color: (1, 1, 1, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Reg'
