#: import NoTransition kivy.uix.screenmanager.NoTransition
<SomePointApp>
    canvas.before:
        Rectangle:
            source: "Images/backgrounds/background5.jpg"
            pos: self.pos
            size: self.size


    GridLayout:
        cols: 2
        rows: 2
        canvas.before:
            Color:
                rgba: (.5, .5, .5, 0.15)
            RoundedRectangle:
                size: self.width / 1.3, self.height - self.height/8
                pos: root.width / 8, self.y + 14
                radius: [15]

        Button:
            id: table1
            source: "Images/furniter/table3!!png.png"
            canvas:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "Images/furniter/table3!!png.png"
            background_color: (1, 1, 1, 0)
            text: ""
            font_name: "Finlandica-Regular"
            on_press:
                root.manager.transition = NoTransition()
                if root.check_not_occupied1(): root.manager.current = 'FoodMenu'

