#: import NoTransition kivy.uix.screenmanager.NoTransition
<Points>
    canvas.before:
        Rectangle:
            source: "Images/backgrounds/background4.jpg"
            pos: self.pos
            size: self.size

    GridLayout:
        size: root.width, root.height
        cols: 1

        GridLayout:
            cols: 2

            Button:
                canvas.before:
                    Rectangle:
                        source: "Images/shapes/circle!!png.png"
                        size: 100, 100
                        pos: self.pos
                background_color: (0, 0, 0, 0)
                on_press: root.button_novobulvarnaya()

            Label:
                text: "Новобульварная, 10"

            Button:
                canvas.before:
                    Rectangle:
                        source: "Images/shapes/circle!!png.png"
                        size: 100, 100
                        pos: self.pos
                background_color: (0, 0, 0, 0)
                on_press: root.button_balyabina()

            Label:
                text: 'Балябина, 32'

            Button:
                canvas.before:
                    Rectangle:
                        source: "Images/shapes/circle!!png.png"
                        size: 100, 100
                        pos: self.pos
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'SomePoint'

            Label:
                text: 'Полины Осипенко, 2'

        GridLayout:
            cols: 2

            Button:
                text: "Меню"
                size: 20, 20

            Button:
                text: "Профиль"

<SomePoint>
    canvas.before:
        Rectangle:
            source: "Images/backgrounds/background4.jpg"
            pos: self.pos
            size: self.size

    GridLayout:
        size: root.width, root.height
        cols: 1
        GridLayout:
            cols: 2
            rows: 2

            Image:
                source: "Images/furniter/table3!!png.png"

            Image:
                source: "Images/furniter/table3!!png.png"

            Image:
                source: "Images/furniter/table3!!png.png"

            Image:
                source: "Images/furniter/table3!!png.png"

        GridLayout:
            cols: 2

            Label:
                text: "Меню: пока что ничего нет"

            Button:
                text: "Назад"
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Points'
