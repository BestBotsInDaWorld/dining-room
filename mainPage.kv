#: import NoTransition kivy.uix.screenmanager.NoTransition
<MainMenuApp>
    amount: amount
    canvas:
        Rectangle:
            source: "Images/backgrounds/background4.jpg"
            pos: self.pos
            size: self.size
    Label:
        font_size: self.width / 10
        id: amount
        pos: -root.width * 0.32, root.height * 0.40
        text: "приветствуем вас! "
        font_name: "RubikMonoOne-Regular"
        font_size: self.width / 50
    Button:
        pos: root.width * 0.4, root.height * 0.40
        font_name: "RubikMonoOne-Regular"
        font_size: self.width / 45
        text: "Доступ к\nадмин\nпанели"
        background_color: (0, 0, 0, 0)
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'AdminLog'
    Button:
        canvas:
            Rectangle:
                source: "Images/icons/ic-24-flag.png"
                pos: self.pos
                size: self.width, self.height
        size_hint_x: None
        size_hint_y: None
        size: root.width / 10, root.height / 8
        pos: root.width * 0.7, root.height * 0.85
        background_color: (0, 0, 0, 0)
        on_press:
            root.manager.transition = NoTransition()
            root.manager.current = 'AdminLog'
    GridLayout:
        rows: 5
        GridLayout:
            rows: 1
        GridLayout:
            rows: 1
        GridLayout:
            cols: 1

        GridLayout:
            cols: 6
            Button:
                canvas:
                    Rectangle:
                        source: "Images/icons/atm-banknote.png"
                        pos: self.pos
                        size: self.width / 1.2, self.height / 1.2
                size_hint_x: None
                size_hint_y: None
                size: root.width / 8, root.height / 6
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'PointChoice'
            Button:
                text: "\nК точкам"
                font_size: self.width / 6
                font_name: "RubikMonoOne-Regular"
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'PointChoice'
            Button:
                canvas:
                    Rectangle:
                        source: "Images/icons/card-viewfinder.png"
                        pos: self.pos
                        size: self.width / 1.2, self.height / 1.2
                size: root.width / 8, root.height / 6
                size_hint_x: None
                size_hint_y: None
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Balance'
            Button:
                font_size: self.width / 6
                text: "\nК балансу"
                font_name: "RubikMonoOne-Regular"
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Balance'
            Button:
                canvas:
                    Rectangle:
                        source: "Images/icons/case-diagram.png"
                        pos: self.pos
                        size: self.width / 1.2, self.height / 1.2
                size_hint_x: None
                size_hint_y: None
                size: root.width / 8, root.height / 6
                pos: root.width * 0.7, root.height * 0.85
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Admin_Login'
            Button:
                font_size: self.width / 8
                text: "\n\nАкции \nсегодня"
                font_name: "RubikMonoOne-Regular"
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Admin_Login'
        GridLayout:
            cols: 6
            Button:
                canvas:
                    Rectangle:
                        source: "Images/icons/umbrella.png"
                        pos: self.pos
                        size: self.width / 1.2, self.height / 1.2
                size_hint_x: None
                size_hint_y: None
                size: root.width / 8, root.height / 6
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Admin_Login'
            Button:
                font_size: self.width / 8
                text: "\nНовинки и \nхиты"
                font_name: "RubikMonoOne-Regular"
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'Admin_Login'
            Button:
                canvas:
                    Rectangle:
                        source: "Images/icons/ic-24-map.png"
                        pos: self.pos
                        size: self.width / 1.2, self.height / 1.2

                size_hint_x: None
                size_hint_y: None
                size: root.width / 8, root.height / 6
                pos: root.width * 0.7, root.height * 0.85
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'AboutUs'
            Button:
                font_size: self.width / 10
                text: "\nДля чего\nнужна\nсистема?"
                font_name: "RubikMonoOne-Regular"
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'AboutUs'
            Button:
                canvas:
                    Rectangle:
                        source: "Images/icons/arrow-right-uturn.png"
                        pos: self.x, self.y
                        size: self.width / 1.2, self.height / 1.2
                size_hint_x: None
                size_hint_y: None
                size: root.width / 8, root.height / 6
                pos: root.width * 0.7, root.height * 0.85
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'OtherSystems'
            Button:
                font_size: self.width / 10
                text: "\nК другим \nприложениям \nэкосистемы"
                font_name: "RubikMonoOne-Regular"
                background_color: (0, 0, 0, 0)
                on_press:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'OtherSystems'