<Registring>
    name: name
    surname: surname
    last_name: last_name
    born: born
    login: login
    password: password
    confirm_password: confirm_password
    check_1, check_2, check_3
    GridLayout:
        size: root.width, root.height
        cols: 1

        GridLayout:

            cols: 2
            rows: 8

            Label:
                text: "Имя"
            TextInput:
                id: name
                multiline: False
            Label:
                text: "Фамилия"
            TextInput:
                id: surname
                multiline: False
            Label:
                text: "Отчество"
            TextInput:
                id: last_name
                multiline: False
            Label:
                text: "Дата рождения"
            TextInput:
                id: born
                multiline: False
        GridLayout:
            cols: 5
            Label:
                text: "Пол"
            CheckBox:
                group: "sex"
                on_active: root.sex_choice(self, self.active, "Мужской")
            Label:
                text: "Мужской"
            CheckBox:
                group: "sex"
                on_active: root.sex_choice(self, self.active, "Женский")
            Label:
                text: "Женский"
        GridLayout:
            size: root.width, root.height
            cols: 3

            Label:
                text: "Логин"
            TextInput:
                id: login
                multiline: False
            Label:
                text: "Пароль"
            TextInput:
                id: password
                multiline: False
            Label:
                text: "Повторите пароль"
            TextInput:
                id: confirm_password
                multiline: False

        Button:
            id: submit
            text: "Submit"
            font_size: 32
            on_press: root.press()