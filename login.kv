<Logining>
    username_input: username_input
    password_input: password_input
    BoxLayout:
        orientation: 'vertical'

        MyLabel:
            font_name: 'rubikMonoOne_regular'
            text: 'Вход'
            font_size: 24

        TextInput:
            id: username_input
            hint_text: 'Имя пользователя'

        TextInput:
            id: password_input
